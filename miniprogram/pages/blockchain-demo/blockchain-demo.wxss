/* pages/blockchain-demo/blockchain-demo.wxss */

/* 页面头部 */
.demo-header {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin-bottom: 30rpx;
}

.demo-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.demo-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 网络状态 */
.network-status {
  margin-bottom: 30rpx;
}

.status-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  margin-right: 15rpx;
}

.status-dot.connected {
  background-color: #4caf50;
  animation: pulse 2s infinite;
}

.status-dot.disconnected {
  background-color: #f44336;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

.network-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.refresh-btn {
  font-size: 32rpx;
  color: #1976d2;
  padding: 10rpx;
}

.network-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-text {
  font-size: 24rpx;
  color: #666;
}

/* 演示操作区 */
.demo-actions {
  margin-bottom: 40rpx;
}

.action-card {
  margin-bottom: 30rpx;
  padding: 30rpx;
}

.action-header {
  margin-bottom: 25rpx;
}

.action-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #666;
}

.action-form {
  margin-bottom: 25rpx;
}

.form-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.form-label {
  width: 160rpx;
  font-size: 26rpx;
  color: #333;
}

.form-input {
  flex: 1;
  padding: 15rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
  background-color: #fafafa;
}

.form-input:focus {
  border-color: #1976d2;
  background-color: white;
}

.picker-display {
  flex: 1;
  padding: 15rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
  background-color: #fafafa;
  color: #333;
}

.current-balance {
  flex: 1;
  font-size: 26rpx;
  color: #1976d2;
  font-weight: bold;
}

.action-btn {
  width: 100%;
  padding: 25rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
}

.action-btn:disabled {
  background-color: #ccc;
  color: #999;
}

/* 实时交易状态 */
.transaction-status {
  margin-bottom: 40rpx;
}

.status-card {
  border-left: 6rpx solid #ff9800;
  background: linear-gradient(135deg, #fff3e0, #ffe0b2);
}

.status-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.status-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #e65100;
}

.loading-animation {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background-color: #ff9800;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot1 { animation-delay: -0.32s; }
.dot2 { animation-delay: -0.16s; }
.dot3 { animation-delay: 0s; }

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.transaction-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.info-label {
  font-size: 24rpx;
  color: #666;
}

.info-value {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.tx-id, .data-hash {
  font-family: 'Courier New', monospace;
  font-size: 20rpx;
  word-break: break-all;
}

.progress-bar {
  height: 8rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff9800, #ffc107);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

/* 区块链历史记录 */
.blockchain-history {
  margin-bottom: 40rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.refresh-history {
  font-size: 26rpx;
  color: #1976d2;
}

.history-list {
  
}

.history-item {
  margin-bottom: 20rpx;
  padding: 25rpx;
}

.history-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.tx-type-badge {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: white;
}

.tx-type-badge.vote {
  background-color: #2196f3;
}

.tx-type-badge.reward {
  background-color: #4caf50;
}

.tx-status {
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.tx-status.confirmed {
  background-color: #e8f5e8;
  color: #4caf50;
}

.tx-status.pending {
  background-color: #fff3e0;
  color: #ff9800;
}

.history-content {
  margin-bottom: 15rpx;
}

.tx-description {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.tx-time {
  font-size: 22rpx;
  color: #999;
}

.history-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tx-id-short {
  font-size: 22rpx;
  color: #666;
  font-family: 'Courier New', monospace;
}

.view-detail {
  font-size: 24rpx;
  color: #1976d2;
}

/* 空状态 */
.empty-history {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 24rpx;
}

/* 区块链浏览器 */
.blockchain-explorer {
  margin-bottom: 40rpx;
}

.explorer-header {
  margin-bottom: 20rpx;
}

.explorer-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.explorer-content {
  
}

.explorer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.explorer-item:last-child {
  border-bottom: none;
}

.explorer-label {
  font-size: 26rpx;
  color: #333;
}

.explorer-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background-color: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.modal-overlay.show .modal-content {
  transform: scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.detail-section {
  margin-bottom: 30rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.detail-label {
  font-size: 24rpx;
  color: #666;
  width: 120rpx;
}

.detail-value {
  flex: 1;
  font-size: 24rpx;
  color: #333;
  text-align: right;
  word-break: break-all;
}

.hash-text {
  font-family: 'Courier New', monospace;
  font-size: 20rpx;
}

.data-content {
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #1976d2;
}

.data-text {
  font-size: 22rpx;
  color: #333;
  font-family: 'Courier New', monospace;
  line-height: 1.5;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-footer button {
  flex: 1;
  padding: 20rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
}