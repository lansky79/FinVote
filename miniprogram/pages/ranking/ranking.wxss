/* pages/ranking/ranking.wxss */

/* 排行榜头部 */
.ranking-header {
  margin-bottom: 30rpx;
}

.header-title {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
}

.my-rank {
  background: linear-gradient(135deg, #1976d2, #42a5f5);
  border-radius: 16rpx;
  padding: 30rpx;
  color: white;
}

.rank-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.rank-label {
  font-size: 28rpx;
}

.rank-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.rank-stats {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  font-size: 24rpx;
  color: #e3f2fd;
}

/* 前三名展示 */
.top-three {
  margin-bottom: 40rpx;
}

.podium {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border-radius: 20rpx;
  position: relative;
}

.podium-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 20rpx;
  position: relative;
}

.first {
  order: 2;
  margin-top: -30rpx;
}

.second {
  order: 1;
}

.third {
  order: 3;
}

.crown {
  font-size: 40rpx;
  margin-bottom: 10rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

.medal {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 15rpx;
}

.medal-gold {
  background: linear-gradient(135deg, #ffd700, #ffb300);
}

.medal-silver {
  background: linear-gradient(135deg, #c0c0c0, #9e9e9e);
}

.medal-bronze {
  background: linear-gradient(135deg, #cd7f32, #8d5524);
}

.podium-item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-bottom: 15rpx;
  border: 4rpx solid white;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.first .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.podium-item .name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 8rpx;
  text-align: center;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.podium-item .points {
  font-size: 22rpx;
  color: #666;
  font-weight: bold;
}

/* 排行榜列表 */
.ranking-list {
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.list-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.ranking-item:last-child {
  border-bottom: none;
}

.rank-badge {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.rank-top {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  color: white;
}

.rank-normal {
  background-color: #f8f9fa;
  color: #666;
}

.rank-text {
  font-size: 24rpx;
  font-weight: bold;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.user-stats {
  display: flex;
  gap: 20rpx;
}

.stat {
  font-size: 22rpx;
  color: #999;
}

.user-points {
  text-align: right;
}

.points-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1976d2;
  margin-bottom: 4rpx;
}

.points-label {
  font-size: 20rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  margin: 40rpx 0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 登录提示 */
.login-tip {
  text-align: center;
  padding: 40rpx;
  margin-top: 40rpx;
}

.tip-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}