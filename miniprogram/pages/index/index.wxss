/* pages/index/index.wxss */

/* 用户信息卡片 */
.user-info {
  background: linear-gradient(135deg, #1976d2, #42a5f5);
  color: white;
  margin-bottom: 15rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 15rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.points {
  font-size: 24rpx;
  color: #e3f2fd;
}

.rank-info {
  text-align: right;
}

.rank-text {
  font-size: 24rpx;
  color: #e3f2fd;
}

/* 登录提示 */
.login-prompt {
  text-align: center;
  padding: 40rpx 30rpx;
  margin-bottom: 15rpx;
}

.login-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.login-desc {
  font-size: 26rpx;
  margin-bottom: 30rpx;
}

/* 统计信息 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 15rpx;
  margin: 15rpx 0;
}

.stat-item {
  text-align: center;
  padding: 20rpx 15rpx;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
}

/* 区块标题 */
.section {
  margin: 20rpx 0;
}

.section-header {
  margin-bottom: 15rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
}

.more-link {
  font-size: 24rpx;
}

/* 紧凑投票列表 */
.vote-item-compact {
  margin-bottom: 10rpx;
  padding: 15rpx;
}

.vote-compact-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.vote-compact-title {
  font-size: 26rpx;
  font-weight: bold;
  flex: 1;
}

.vote-status {
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.vote-compact-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stock-code {
  font-size: 24rpx;
  font-weight: bold;
}

.participants {
  font-size: 20rpx;
}

.vote-status-text {
  font-size: 20rpx;
  font-weight: bold;
}

/* 无数据提示 */
.no-data {
  text-align: center;
  padding: 30rpx;
}

.no-data-text {
  font-size: 24rpx;
  color: #999;
}

/* 快速操作网格 */
.quick-actions-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 12rpx;
  margin-top: 20rpx;
}

.action-btn-grid {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 10rpx;
  margin: 0;
  border-radius: 12rpx;
  min-height: 100rpx;
}

.action-icon {
  font-size: 28rpx;
  margin-bottom: 6rpx;
}

.action-text {
  font-size: 20rpx;
  font-weight: normal;
}