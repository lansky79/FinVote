/* pages/smart-contract/smart-contract.wxss */

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 15rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.page-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 25rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #1976d2;
  color: white;
}

/* 创建按钮 */
.create-section {
  margin-bottom: 30rpx;
}

.create-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  font-size: 28rpx;
}

.btn-icon {
  margin-right: 10rpx;
  font-size: 24rpx;
}

/* 合约类型介绍 */
.contract-types {
  margin-bottom: 30rpx;
}

.types-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.type-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.type-item {
  padding: 25rpx;
  border-left: 4rpx solid #1976d2;
}

.type-header {
  margin-bottom: 10rpx;
}

.type-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.type-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 合约列表 */
.contract-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contract-item {
  padding: 30rpx;
}

.contract-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.contract-info {
  flex: 1;
}

.contract-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.contract-type {
  font-size: 22rpx;
  color: #1976d2;
  background: #e3f2fd;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.contract-status {
  margin-left: 20rpx;
}

.status-badge {
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: white;
}

.status-badge.draft {
  background: #ff9800;
}

.status-badge.deployed {
  background: #4caf50;
}

.status-badge.executing {
  background: #2196f3;
}

.status-badge.completed {
  background: #9e9e9e;
}

.contract-desc {
  margin-bottom: 15rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.contract-meta {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
  margin-bottom: 20rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #eee;
}

.meta-item {
  font-size: 22rpx;
  color: #999;
}

.contract-actions {
  display: flex;
  gap: 15rpx;
}

.contract-actions button {
  flex: 1;
  margin: 0;
  padding: 20rpx;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  font-size: 28rpx;
  color: #999;
}