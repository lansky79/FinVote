/* pages/admin/admin.wxss */

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 20rpx;
  padding: 30rpx 0;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: white;
  border-radius: 15rpx;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.page-desc {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 统计卡片 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15rpx;
  margin-bottom: 25rpx;
}

.stat-card {
  background: white;
  padding: 25rpx;
  border-radius: 12rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stat-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #ff6b6b;
  color: white;
}

/* 内容区域 */
.content-section {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 用户列表 */
.user-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.user-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 15rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.user-stats {
  font-size: 22rpx;
  color: #666;
}

.user-actions {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.user-status {
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  color: white;
}

.user-status.active {
  background: #4caf50;
}

.user-status.inactive {
  background: #f44336;
}

/* 投票列表 */
.vote-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.vote-item {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.vote-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.vote-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.vote-status {
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  color: white;
}

.vote-status.active {
  background: #4caf50;
}

.vote-status.ended {
  background: #9e9e9e;
}

.vote-info {
  margin-bottom: 15rpx;
}

.vote-detail {
  font-size: 22rpx;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

.vote-time {
  font-size: 20rpx;
  color: #999;
}

.vote-actions {
  display: flex;
  gap: 10rpx;
}

/* 合约列表 */
.contract-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.contract-item {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.contract-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.contract-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.contract-status {
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  color: white;
}

.contract-status.deployed {
  background: #4caf50;
}

.contract-status.draft {
  background: #ff9800;
}

.contract-info {
  margin-top: 10rpx;
}

.contract-detail {
  font-size: 22rpx;
  color: #666;
}

/* 系统信息 */
.system-info {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.info-label {
  font-size: 24rpx;
  color: #333;
}

.info-value {
  font-size: 24rpx;
  color: #666;
}

.status-ok {
  color: #4caf50 !important;
  font-weight: bold;
}

.system-actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.system-actions button {
  margin: 0;
  padding: 25rpx;
  font-size: 26rpx;
}

/* 按钮样式 */
.btn-small {
  padding: 8rpx 15rpx;
  font-size: 20rpx;
  margin: 0;
}

.btn-danger {
  background: #f44336;
  color: white;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  font-size: 26rpx;
  color: #999;
}

/* 无权限提示 */
.no-permission {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.no-permission-text {
  font-size: 28rpx;
  color: #666;
}