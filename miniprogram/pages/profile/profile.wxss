/* pages/profile/profile.wxss */

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin-bottom: 30rpx;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 25rpx;
  border: 4rpx solid rgba(255,255,255,0.3);
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-rank {
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
}

.btn-edit {
  background-color: rgba(255,255,255,0.2);
  color: white;
  border: 2rpx solid rgba(255,255,255,0.3);
  border-radius: 20rpx;
  padding: 15rpx 25rpx;
  font-size: 24rpx;
}

.user-stats {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: white;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255,255,255,0.8);
}

/* 登录卡片 */
.login-card {
  text-align: center;
  padding: 60rpx 40rpx;
  margin-bottom: 30rpx;
}

.login-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.login-desc {
  display: block;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

/* 菜单项 */
.menu-section, .settings-section {
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 25rpx;
  width: 50rpx;
  text-align: center;
}

.menu-title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  color: #999;
  font-size: 24rpx;
}

/* 最近投票 */
.recent-votes {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more-link {
  font-size: 26rpx;
}

.vote-item {
  margin-bottom: 15rpx;
  padding: 25rpx;
}

.vote-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.vote-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.vote-result {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  white-space: nowrap;
}

.result-true {
  background-color: #e8f5e8;
  color: #4caf50;
}

.result-false {
  background-color: #ffebee;
  color: #f44336;
}

.result-null {
  background-color: #fff3e0;
  color: #ff9800;
}

.vote-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.stock-info {
  font-size: 26rpx;
  color: #666;
}

.prediction {
  font-size: 24rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

.prediction-up {
  background-color: #e8f5e8;
  color: #4caf50;
}

.prediction-down {
  background-color: #ffebee;
  color: #f44336;
}

.vote-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.vote-time {
  font-size: 22rpx;
}

.points-earned {
  font-size: 22rpx;
  color: #4caf50;
  font-weight: bold;
}

/* 成就展示 */
.achievements {
  margin-bottom: 30rpx;
}

.achievement-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-top: 20rpx;
}

.achievement-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  position: relative;
}

.achievement-item.achieved {
  background: linear-gradient(135deg, #ffd700, #ffb300);
  color: white;
}

.achievement-item.locked {
  background-color: #f5f5f5;
  color: #999;
}

.achievement-icon {
  display: block;
  font-size: 40rpx;
  margin-bottom: 15rpx;
}

.achievement-name {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.achievement-desc {
  font-size: 22rpx;
  opacity: 0.8;
}