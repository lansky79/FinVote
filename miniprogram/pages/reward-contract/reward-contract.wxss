/* pages/reward-contract/reward-contract.wxss */

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 15rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.page-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 功能介绍 */
.intro-card {
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
  border: none;
}

.intro-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.intro-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.intro-item {
  display: flex;
  align-items: center;
}

.intro-icon {
  font-size: 24rpx;
  margin-right: 15rpx;
  width: 40rpx;
}

.intro-text {
  font-size: 24rpx;
  color: #666;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 25rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #667eea;
  color: white;
}

/* 创建按钮 */
.create-section {
  margin-bottom: 30rpx;
}

.create-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  font-size: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.btn-icon {
  margin-right: 10rpx;
  font-size: 24rpx;
}

/* 合约列表 */
.contract-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contract-item {
  padding: 30rpx;
  border-left: 4rpx solid #667eea;
}

.contract-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.contract-info {
  flex: 1;
}

.contract-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.contract-type {
  font-size: 22rpx;
  color: #667eea;
  background: #e8eaf6;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.contract-status {
  margin-left: 20rpx;
}

.status-badge {
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: white;
}

.status-badge.draft {
  background: #ff9800;
}

.status-badge.deployed {
  background: #4caf50;
}

.status-badge.completed {
  background: #2196f3;
}

/* 合约详情 */
.contract-details {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 24rpx;
  color: #666;
}

.detail-value {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.reward-amount {
  color: #4caf50;
}

/* 合约描述 */
.contract-description {
  margin-bottom: 15rpx;
  padding: 15rpx;
  background: #fff3e0;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 时间信息 */
.contract-time {
  margin-bottom: 20rpx;
}

.time-text {
  font-size: 22rpx;
  color: #999;
}

/* 操作按钮 */
.contract-actions {
  display: flex;
  gap: 15rpx;
}

.contract-actions button {
  flex: 1;
  margin: 0;
  padding: 20rpx;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  font-size: 28rpx;
  color: #999;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  max-height: 80%;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.form-group {
  margin-bottom: 25rpx;
  position: relative;
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.form-group.half {
  flex: 1;
}

.form-label {
  font-size: 26rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.form-unit {
  position: absolute;
  right: 20rpx;
  top: 50rpx;
  font-size: 24rpx;
  color: #999;
}

.picker-view {
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
}

/* 奖励预览 */
.reward-preview {
  margin: 30rpx 0;
  padding: 20rpx;
  background: #e8f5e8;
  border-radius: 12rpx;
}

.preview-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.preview-item {
  margin-bottom: 8rpx;
  font-size: 24rpx;
  color: #4caf50;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.modal-actions button {
  flex: 1;
  margin: 0;
  padding: 25rpx;
  font-size: 26rpx;
}